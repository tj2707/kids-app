{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "target": "es2017",
      "noImplicitAny": false,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": "src",
      "resolveJsonModule": true,
      "typeRoots": [
        "./src/types",
        "node_modules/@types"
      ],
      "paths": {
          "*": [
              "node_modules/*"
          ]
      }
  },
  "exclude": [
    "node_modules/*"
  ]
}